{
  "name": "macadam",
  "version": "2.0.19",
  "description": "Async node.js interface to Blackmagic Design capture and playback devices.",
  "main": "index.js",
  "types": "index.d.ts",
  "keywords": [
    "blackmagic",
    "SDI",
    "playback",
    "capture",
    "decklink",
    "video",
    "sound"
  ],
  "scripts": {
    "install": "node arch.mjs",
    "build": "node-gyp rebuild",
    "build:arm": "CXX=arm-linux-gnueabihf-g++ node-gyp rebuild --arch\"arm\" --target_arch=\"arm\"",
    "build:linuxx86":   "CXX=x86_64-linux-gnu-g++ node-gyp rebuild --arch\"x64\" --target_arch=\"x64\"",
    "test": "tape test/*Spec.js",
    "lint": "eslint index.js **/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Streampunk/macadam.git"
  },
  "author": "Streampunk Media Ltd",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Streampunk/macadam/issues"
  },
  "homepage": "https://github.com/Streampunk/macadam#readme",
  "dependencies": {
    "bindings": "^1.5.0",
    "cross-spawn": "^7.0.3",
    "highland": "^2.13.5"
  },
  "gypfile": true,
  "devDependencies": {
    "eslint": "^8.10.0",
    "tape": "^5.5.2"
  }
}